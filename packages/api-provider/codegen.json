{
  "schema": {
    "NEXT_PUBLIC_THE_GRAPH_URL": {
      "headers": {}
    }
  },
  "documents": [
    {
      "./src/**/*.{ts,tsx}": {
        "noRequire": true
      }
    }
  ],
  "generates": {
    "./schema.d.ts": {
      "plugins": ["typescript", "typescript-operations"],
      "config": {
        "scalars": {
          "ID": "string"
        }
      }
    },
    "./schema.graphql": {
      "plugins": ["schema-ast"]
    }
  },
  "hooks": {
    "afterAllFileWrite": ["prettier --write"]
  }
}
