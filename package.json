{
  "name": "znft-website",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "site/*"
    ],
    "nohoist": [
      "**/@nomiclabs/**"
    ]
  },
  "scripts": {
    "build": "turbo run build --scope=marketplace --include-dependencies --no-deps",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --scope=marketplace --include-dependencies --no-deps",
    "start:node": "yarn workspace contract start:node",
    "dev:deploy": "yarn workspace contract deploy:local",
    "test:deploy": "yarn workspace contract deploy:rinkeby",
    "start": "turbo run start",
    "types": "turbo run types",
    "prettier-fix": "prettier --write ."
  },
  "devDependencies": {
    "husky": "7.0.4",
    "lint-staged": "12.4.1",
    "prettier": "2.7.1",
    "turbo": "1.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "turbo run lint"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --write",
      "git add"
    ],
    "**/*.{md,mdx,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "packageManager": "yarn@3.2.1"
}
