{
  "baseBranch": "origin/main",
  "globalDependencies": [".env"],

  "globalEnv": ["FIREBASE_PRIVATE_KEY", "FIREBASE_CLIENT_EMAIL"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "marketplace#build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "prettier-fix": {
      "outputs": []
    },
    "dev": {
      "cache": true,
      "env": ["FIREBASE_PRIVATE_KEY", "FIREBASE_CLIENT_EMAIL"]
    },
    "start": {
      "cache": true
    },
    "types": {
      "outputs": ["dist/**/*.d.ts"]
    }
  }
}
